{% extends "admin_panel.html.twig" %}

{% block title %}Admin Products{% endblock %}

{% block content %}
    <div class="left_content">  

        
        <form method="post" enctype="multipart/form-data" >
            
                <label>Product Title</label>
                <input type="text" name="title" placeholder="title"  required="required" />
                <br>
                <label>Category Id</label>
                <input type="text" name="catID" placeholder="category" required="required" value="{{v.category}}"/>
                <br>
                <label>Model Name</label>
                <input type="text" name="modelName" placeholder="modelName" required="required" />
                <br>
            
                <label>Model NO.</label>
                <input type="text" name="modelNo" placeholder="model_no" />
                <br>
                <label>Description</label>
                <input type="text" name="desc1" placeholder="Product Description Line1" required="required" />
                 <br>
                <label>Description</label>
                <input type="text" name="desc2" placeholder="Product Description Line2" />
                 <br>
                <label>Price</label>
                <input type="text" name="price" placeholder="price" required="required" /> CDN$
                 <br>
                <label>Quantity(Stock)</label>
                <input type="text" name="stock" placeholder="stock" required="required" />
                 <br>
                <label>Discount</label>
                <input type="text" name="discount" placeholder="100%" />
                 <br>
                <label>Image:</label> <input type="file" name="image"> <br>
                
                
            <div class="login-footer">
                <div class ="error-message">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <br>
                <button type="submit" id="button_manage">Add One Product</button><br>
                
                {% if error %}
                    <p class="errorList">Register failed try again.</p>
                {% endif %}
             
            </div> <!--login-footer-->
        </form>
            </div>   <!--end of center content --> 
             <div class="right">
                 <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
            <a href="admin_product_add" class="bt_green"><span class="bt_green"></span><strong>Add Anthor One </strong><span class="bt_green_r"></span></a>
            <a href="admin_product" class="bt_blue"><span class="bt_blue_lft"></span><strong>List all Product</strong><span class="bt_blue_r"></span></a>
            <a href="#" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>   
           </div>
    
{% endblock content %}


