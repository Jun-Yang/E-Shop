{% extends "admin_panel.html.twig" %}

{% block title %}Admin Products{% endblock %}

{% block content %}
    <div class="left_content" >  
        <form method="post" enctype="multipart/form-data" >
            <table id="rounded-corner">
                <tr>
                    <th colspan="4"><label>Product ID </label></th>
                    <th colspan="2">{{v.ID}}</th> 
                </tr>
                <tr>
                    <td><label>Product Name</label></td>
                    <td><input type="text" name="name" placeholder="name"  required="required" value="{{v.name}}" /></td>
                    <td><label>Product Title</label></td>
                    <td><input type="text" name="title" placeholder="title"  required="required" value="{{v.title}}"/></td>
                    <td><label>Category Id</label></td>
                    <td><input type="text" name="catID" placeholder="category" required="required" value="{{v.category}}"/></td> 
                </tr>
                <tr>
                    <td><label>Model Name</label></td>
                    <td><input type="text" name="modelName" placeholder="modelName" required="required" value="{{v.modelName}}"/></td>
                    <td><label>Model NO.</label></td>
                    <td><input type="text" name="modelNo" placeholder="001" value="{{v.modelNo}}"/></td>
                    <td><label>Code</label></td>
                    <td><input type="text" name="code" placeholder="12315632409862" /></td> 
                </tr>
                <tr>
                    <td><label>Description 1</label></td>
                    <td><input type="text" name="desc1" placeholder="Product Description Line1" required="required" value="{{v.desc1}}"/></td>
                    <td><label>Description 2</label></td>
                    <td><input type="text" name="desc1" placeholder="Product Description Line2"  value="{{v.desc2}}" /></td>
                </tr>
                <tr>
                    <td><label>Price</label></td> 
                    <td><input type="text" name="price" placeholder="price" required="required" value="{{v.price}}" /> CDN$</td> 
                    <td><label>Discount</label></td>
                    <td><input type="text" name="discount" placeholder="100%" value="{{v.discount}}"/></td>
                    <td><label>Quantity(Stock)</label></td>
                    <td><input type="text" name="stock" placeholder="stock" required="required" value="{{v.quantity}}"/></td>
                </tr>
                <tr>
                    <td><label>Image Upload</label></td>
                    <td><input type="file" name="image"></td> 
                    <td><label>Image2 Upload</label></td>
                    <td colspan="2"><input type="file" name="image2"></td>
                </tr>
            </table>    

            <input type="submit" class ="bt_blue" value="{{operation}} product"><br>    
            <div class="login-footer">
                <div class ="error-message">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <br>

                {% if error %}
                    <p class="errorList">Register failed try again.</p>
                {% endif %}

            </div> <!--login-footer-->
        </form>
    </div>   <!--end of center content --> 
    <div class="right">
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        <a href="/admin/product/add" class="bt_green"><span class="bt_green"></span><strong>Add Anthor One </strong><span class="bt_green_r"></span></a>
        <a href="/admin/product/list" class="bt_blue"><span class="bt_blue_lft"></span><strong>List all Product</strong><span class="bt_blue_r"></span></a>
        <a href="/admin/product/delete" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>   
    </div>

{% endblock content %}


