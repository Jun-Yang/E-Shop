{% extends "admin_panel.html.twig" %}

{% block title %}Admin Products{% endblock %}

{% block content %}
    <div class="left_content" >  
        <form method="post" enctype="multipart/form-data" >
            <table id="rounded-corner">
                <tr>
                    <th colspan="4"><label>Product ID </label></th>
                    <th colspan="2">{{p.ID}}</th> 
                </tr>
                <tr>
                    <td><label>Product Name</label></td>
                    <td><input type="text" name="name" placeholder="name"  value="{{ p.name }}" required="required" /></td>
                    <td><label>Product Title</label></td>
                    <td><input type="text" name="title" placeholder="title" value="{{ p.title }}"  /></td>
                    <td><label>Category Id</label></td>
                    <td><input type="text" name="catID" placeholder="category" value="{{ p.catID }}"  /></td> 

                </tr>
                <tr>
                    <td><label>Model Name</label></td>
                    <td><input type="text" name="modelName" value="{{ p.modelName }}" required="required" /></td>
                    <td><label>Model NO.</label></td>
                    <td><input type="text" name="modelNo" value="{{ p.modelNo }}"  /></td>
                    <td><label>Code</label></td>
                    <td><input type="text" name="code" value="{{ p.code }}"  /></td> 
                    
                </tr>
                <tr>
                    <td><label>Description 1</label></td>
                    <td><input type="text" name="desc1" value="{{ p.desc1 }}"   /></td>
                    <td><label>Description 2</label></td>
                    <td><input type="text" name="desc1" value="{{ p.desc2 }}"  /></td>
                    
                    
                </tr>
                <tr>
                    <td><label>Price</label></td> 
                    <td><input type="text" name="price" value="{{ p.price }}" /> CDN$</td> 
                    <td><label>Discount</label></td>
                    <td><input type="text" name="discount" value="{{ p.discount }}" /></td>
                    <td><label>Quantity(Stock)</label></td>
                    <td><input type="text" name="stock" value="{{ p.stock }}" /></td>
                </tr>
                <tr>
                <td><label>Image Upload</label></td>
                <td><input type="file" name="image"></td> 
                <td><label>Image2 Upload</label></td>
                <td colspan="2"><input type="file" name="image2"></td>
                 
                </tr>
            </table>    

            <div class="login-footer">
                <div class ="error-message">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <br>
                <button type="submit" id="button_manage">Add One Product</button><br>

                {% if error %}
                    <p class="errorList">Register failed try again.</p>
                {% endif %}

            </div> <!--login-footer-->
        </form>
    </div>   <!--end of center content --> 
    <div class="right">
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        <a href="admin_product_add" class="bt_green"><span class="bt_green"></span><strong>Add Anthor One </strong><span class="bt_green_r"></span></a>
        <a href="admin_product" class="bt_blue"><span class="bt_blue_lft"></span><strong>List all Product</strong><span class="bt_blue_r"></span></a>
        <a href="#" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>   
    </div>

{% endblock content %}



