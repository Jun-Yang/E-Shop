{% extends "admin_panel.html.twig" %}

{% block title %}Admin Category Add{% endblock %}

{% block content %}
    <div class="left_content">  
        <form method="post" enctype="multipart/form-data" >
            <table id="rounded-corner">
                <tr>
                    <th colspan="4"><label>Category Management </label></th>
                    <th colspan="2">{{v.ID}}</th> 
                </tr>
                <tr>
                    <td><label>CategoryName</label></td>
                    <td><input type="text" name="name" placeholder="Required name"  value="{{v.name}}" required="required" /></td>
                    <td><label>ParentID</label></td>
                    <td><input type="text" name="parent" placeholder="0" value="{{v.parent}}" /></td> 
                    <td><label>Layer</label></td>
                    <td><input type="text" name="layer" placeholder="Required Layer 1" value="{{v.layer}}" /></td>
                </tr>
                <tr>
                    <td><label>Description</label></td>
                    <td><input type="text" name="description" placeholder="description" value="{{v.description}}"/></td> 
                    <td><label>status</label></td>
                    <td><input type="text" name="status" placeholder="OK" value="{{v.status}}" /></td>
                    <td><label>PostDate</label></td>
                    <td><input type="text" name="postDate" placeholder="PostDate" value="{{v.postDate}}" /></td>
                </tr>
            </table>

            <div class="login-footer">
                <div class ="error-message">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <br>
                <br>
                <br>
                <input type="submit" id="button_manage" class ="bt_blue" value="{{operation}} Category"><br>    
                {% if error %}
                    <p class="errorList">Add Category failed try again.</p>
                {% endif %}

            </div> <!--login-footer-->
        </form>
    </div>   <!--end of center content --> 
    <div class="right">
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        <a href="admin/category/add" class="bt_green"><span class="bt_green"></span><strong>Add Category </strong><span class="bt_green_r"></span></a>
        <a href="admin/categroy/list" class="bt_blue"><span class="bt_blue_lft"></span><strong>List all Categories</strong><span class="bt_blue_r"></span></a>
        <a href="admin/categroy/delete" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>   
    </div>

{% endblock content %}