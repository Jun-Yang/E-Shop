{% extends "master.html.twig" %}

{% block title %}Product add{% endblock %}

{% block headExtra %}
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/product.css" rel="stylesheet">

    <script>
        $(document).ready(function () {
            $("#taskNameInUse").hide();
            $("input[name=task]").keyup(function () {
                var taskName = $(this).val();
                //console.log("Keyup: " + email);
                if (taskName === "") {
                    $("#taskNameInUse").hide();
                    return;
                }
                $.get("/ajax/tasknameused/" + task, function (result) {
                    result = eval(result);
                    if (result) {
                        $("#taskNameInUse").show();
                    } else {
                        $("#taskNameInUse").hide();
                    }
                });
            });
        });
    </script>

{% endblock %}

{% block content %}
    <div class="container">
        <div class="add-product">
            <h1 class="add-product-heading">
                <!--<strong>Add Product</strong>-->
            </h1>
            
            <div class="container">
        <div class="row">
            <div class="col-md-2">
                <div class="wow bounceInUp">   
                    <br>
                    <br>
                    <!--<img src="images/model01.png" class="img-responsive" width="480" height="340">-->
                </div>
            </div>

            <div class="col-md-10">    
                <div class="wow fadeIn">                        
                    <div class="login">
                        <h1 class="login-heading">
                            <strong>Add a Product </strong>
                        </h1>
                        <hr>
                        <form method="post" enctype="multipart/form-data" >
                            <div class="form-group">
                                <label>Product Title</label>
                                <input type="text" name="title" placeholder="title" class="input-txt" required="required" />
                                <label>Category Id</label>
                                <input type="text" name="cat_id" placeholder="category" required="required" class="input-txt" value="{{v.category}}"/>
                                <label>Model Name</label>
                                <input type="text" name="model_name" placeholder="model_name" required="required" class="input-txt" />
                                
                            </div>  
                            
                            <div class="form-group">
                                <label>Model NO.</label>
                                <input type="text" name="model_no" placeholder="model_no" required="required" class="input-txt" />
                                <label>Description</label>
                                <input type="text" name="desc1" placeholder="Product Description Line1" required="required" class="input-txt" />
                                <label>Description</label>
                                <input type="text" name="desc2" placeholder="Product Description Line2" required="required" class="input-txt" />
                                
                            </div>
                            <div class="form-group">
                                <label>Price</label>
                                <input type="text" name="price" placeholder="price" required="required" class="input-txt" />CDN$
                                <label>Quantity(Stock)</label>
                                <input type="text" name="stock" placeholder="stock" required="required" class="input-txt" />
                                <label>Discount</label>
                                <input type="text" name="discount" placeholder="100%" required="required" class="input-txt" />
                            </div>
                            <div class="login-footer">
                                <div class ="error-message">
                                    {% if errorList %}
                                        <ul class="errorList">
                                            {% for error in errorList %}
                                                <li>{{ error }}</li>
                                                {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
                                <br>
                                <button type="submit" class="btn btn-primary">Add One Product</button><br>
                                {% if error %}
                                    <p class="errorList">Register failed try again.</p>
                                {% endif %}
                            </div> <!--login-footer-->
                        </form>
                        </div> <!--End login-->
                    </div> <!--End wow fadeIn-->
                </div> <!--End col-md-10-->
            </div> <!-- /.row --> 
        </div> 
    </div>
<!-- /.row --> 
            
       </div>             
    

{% endblock %}
