{% extends "admin_panel.html.twig" %}

{% block title %}Admin User Add{% endblock %}

{% block content %}
    <div class="left_content">  
        <form method="post" enctype="multipart/form-data" >
            <table id="rounded-corner">
                <tr>
                    <th colspan="4"><label>UserID </label></th>
                    <th colspan="2">{{v.ID}}</th> 
                </tr>
                <tr>
                    <td><label>Username</label></td>
                    <td><input type="text" name="name" placeholder="username"  required="required" /></td>
                    <td><label>FirstName</label></td>
                    <td><input type="text" name="fname" placeholder="First name"  /></td> 
                    <td><label>LastName</label></td>
                    <td><input type="text" name="lname" placeholder="Last Name"  /></td>
                </tr
                <tr>
                    <td><label>Email</label></td>
                    <td><input type="text" name="email" placeholder="email" required="required" value="{{v.category}}"/></td> 
                    <td><label>Phone</label></td>
                    <td><input type="text" name="phone" placeholder="phone_no" /></td>
                    <td><label>City</label></td>
                    <td><input type="text" name="city" placeholder="city" /></td>
                </tr>
                <tr>
                    <td><label>Address1</label></td>
                    <td><input type="text" name="addressLine1" placeholder="address Line1" /></td> 
                    <td><label>Address2</label></td>
                    <td><input type="text" name="addressLine2" placeholder="address Line1" /></td> 
                    <td><label>State</label></td>
                    <td><input type="text" name="state" placeholder="city" /></td>
                </tr>
                <tr>
                    <td><label>Province Code</label></td>
                    <td><input type="text" name="code" placeholder="QC" /></td> 
                    <td><label>User Role</label></td>
                    <td><input type="text" name="role" placeholder="user" /></td> 
                    <td><label>Status</label></td>
                    <td><input type="text" name="status" placeholder="0" /></td>
                </tr>
                <tr>
                    <td><label>password</label></td>
                    <td><input type="text" name="pass1" placeholder="pass1" /></td> 
                </tr>
            </table>

            <div class="login-footer">
                <div class ="error-message">
                    {% if errorList %}
                        <ul class="errorList">
                            {% for error in errorList %}
                                <li>{{ error }}</li>
                                {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <br>
                <button type="submit" id="button_manage">Add One User</button><br>

                {% if error %}
                    <p class="errorList">Register failed try again.</p>
                {% endif %}

            </div> <!--login-footer-->
        </form>
    </div>   <!--end of center content --> 
    <div class="right">
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
        <a href="admin_product_add" class="bt_green"><span class="bt_green"></span><strong>Add Anthor One </strong><span class="bt_green_r"></span></a>
        <a href="admin_product" class="bt_blue"><span class="bt_blue_lft"></span><strong>List all Product</strong><span class="bt_blue_r"></span></a>
        <a href="#" class="bt_red"><span class="bt_red_lft"></span><strong>Delete Product</strong><span class="bt_red_r"></span></a>   
    </div>

{% endblock content %}


